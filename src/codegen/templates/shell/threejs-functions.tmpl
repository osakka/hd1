    local depth="${3:-1}"
    local color="${4:-#777777}"
    local x="${5:-0}"
    local y="${6:-0}"
    local z="${7:-0}"
    
    local data="{
        \"geometry\": {
            \"type\": \"box\",
            \"width\": $width,
            \"height\": $height,
            \"depth\": $depth
        },
        \"material\": {
            \"type\": \"phong\",
            \"color\": \"$color\"
        },
        \"position\": {
            \"x\": $x,
            \"y\": $y,
            \"z\": $z
        }
    }"
    
    hd1_request "POST" "/threejs/entities" "$data"
}

